#!/bin/bash

function errore {
	echo OPERAZIONE NON CONSENTITA
	echo
	echo "utilizzare \"-h\" per visualizzare la lista dei comandi"
}

function aiuto {
	echo "   -a = update, dist-upgrade"
	echo "   -u = update, upgrade"
	echo "   -r = update"
	echo "   -i = install package"
	echo "   -h = show this help"
}

function check {
	if [ $1 -gt $2 ]; then
		errore
		exit 1
	fi
}

function update {
	sudo apt-get update
}

function upgrade {
	sudo apt-get upgrade
}

function dist-upgrade {
	sudo apt-get dist-upgrade
}

function install {
	sudo apt-get install $1
}

if [ $# -gt 0 ]
then
	case $1 in
		"-r") 	check $# 1
			update;;
				
		"-a") 	check $# 1
			update
			upgrade
			dist-upgrade;;

		"-d")	check $# 1
			update
			dist-upgrade;;

		"-u")   check $# 1
			update
			upgrade;;

		"-h")	aiuto;;
	
		"-i")	install $2;;

		*)	errore;;
	esac
else
	errore
fi
