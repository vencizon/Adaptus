#!/bin/bash

##########################################
## 	ADAPTUS				##
##					##
##	the apt frontend		##
##########################################

function error {
	echo "OPERAZIONE NON CONSENTITA
	"	
	echo "utilizzo \"-h\" per visualizzare la lista dei comandi"
}

function version {
	echo "Adaptus version 0.0.6"
}

function help {
	echo "ADAPTUS - A simple frontend for APT
	
	"
	echo "USAGE"
	echo "	adaptus [options] [file ..]
	
	"
	echo "OPTIONS"
	echo "	-d			apt-get update
		"
	echo "	-u			apt-get update
				apt-get upgrade
		"
	echo "	-du			apt-get update
				apt-get dist-upgrade
		"
	echo "	-a			apt-get update
				apt-get upgrade
				apt-get dist-upgrade
		"
	echo "	-i			apt-get install file1 .. filen
		"
	echo "	-r			apt-get remove file1 .. filen
		"
	echo "	-p			apt-get purge file1 .. filen
		"
	echo "	-ar			apt-get autoremove [file1 .. filen]
		"
	echo "	-V			for version
		"
	echo "	-h			show this help
		"
}

function check {
	if [ $1 -gt $2 ]; then
		error
		exit 1
	fi
}

function update {
	sudo apt-get update
}

function upgrade {
	sudo apt-get upgrade
}

function dist-upgrade {
	sudo apt-get dist-upgrade
}

function install {
	shift
	sudo apt-get install $@
}

function remove {
	shift
	sudo apt-get remove $@
}

function purge {
	shift
	sudo apt-get purge $@
}

function autoremove {
	shift
	sudo apt-get autoremove $@
}

function easteregg {
	apt-get moo
}


operator=`expr substr $1 1 1`
first=`expr substr $1 2 15`

if [ $operator = "-" ]
then
	case $first in
		"h")	help;;

		"d")	check $# 1
			update;;
				
		"a") 	check $# 1
			update
			upgrade
			dist-upgrade;;

		"du")	check $# 1
			update
			dist-upgrade;;

		"u")	check $# 1
			update
			upgrade;;

		"i")	install $@;;

		"r")	remove $@;;

		"p")	purge $@;;
	
		"ar")	autoremove $@;;

		"moo")	easteregg;;

		"V")	version;;

		*)	error;;
	esac
else
	error
fi
